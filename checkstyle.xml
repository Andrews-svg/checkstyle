<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
  <property name="severity" value="warning"/>
  
  <module name="FileTabCharacter">
    <property name="fileExtensions" value="java"/>
  </module>

  <module name="TreeWalker">
    <module name="LocalVariableName">
      <message key="name.invalidPattern" value="Неверное наименование локальной переменной - ''{0}''..."/>
    </module>

    <module name="ConstantName">
      <message key="name.invalidPattern" value="Неверное наименование константы - ''{0}''..."/>
    </module>

    <module name="MethodName">
      <property name="format" value="^[a-z](_?[a-zA-Z0-9]+)*$"/>
      <message key="name.invalidPattern" value="Неверное наименование метода - ''{0}''..."/>
    </module>

    <module name="MethodLength">
      <property name="tokens" value="METHOD_DEF"/>
      <property name="max" value="50"/>
      <message key="maxLen.method" value="Количество строк в методе {0,number,integer}..."/>
    </module>

    <module name="EmptyBlock"/>
    
    <module name="AvoidNestedBlocks">
      <message key="block.nested" value="Избегайте вложенных блоков..."/>
    </module>

    <module name="NeedBraces">
      <message key="needBraces" value="тело ''{0}'' должно быть заключено в '{}'."/>
    </module>

    <module name="UnusedImports">
      <message key="import.unused" value="Неиспользуемый импорт класса - {0}..."/>
    </module>
  </module>
</module>
